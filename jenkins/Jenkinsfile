// Jenkinsfile
pipeline {
    agent any
    
    stages {

        stage('Clean') {
            steps {
                deleteDir()
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                dir('/jenkins') {
                    echo "Inside Jenkins Dir"
                }
            }
        }

         stage('Status') {
            steps {
                sh 'pwd' // Check the working directory
            }
         }

        stage('Greeting') {
            steps {
                script {
                    def greetings = load 'jenkins/greetings.groovy'
                    greetings.call(name: 'Brendan', age: 22) 
                }
            }
        }
    }
}
