// Jenkinsfile
pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
                 sh 'pwd'
                 sh 'ls -alh'
            }
        }

         stage('Set Working Directory') {
            steps {
                script {
                    // Change the working directory to /jenkins
                    dir('/jenkins') {
                        sh 'pwd' // Check the working directory
                        sh 'ls -alh' // List files in the directory
                    }
                }
            }
        }
    }
}
